@model List<Buttons.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>This is the buttons page!</h1>
        @Html.Label("Do you wanna play with buttons?");
        @using (Html.BeginForm("HandleButtonClick", "Button"))
        {
            for (int i = 0; i < Model.Count; i++)
            {
                if (i % 5 == 0)
                {
                    <br />
                }

                <button type="submit" name="mine" value=@i>
                    @if (Model[i].State == true)
                    {
                        <img src="~/Images/on.png" />
                    }
                    else
                    {
                        <img src="~/Images/off.png" />
                    }
                </button>

            }

        }


    </div>
</body>
</html>
